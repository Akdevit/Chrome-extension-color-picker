{
  "name": "Color Picker",
  "description": "A color picker extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/color-picker_16.png",
    "32": "/images/color-picker-32.png",
    "64": "/images/color-picker-64.png"
  }
}
